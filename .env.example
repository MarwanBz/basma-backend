# Server
NODE_ENV=development
PORT=4300
SERVER_URL=http://localhost:4300

# Database
MYSQL_DATABASE_URL=mysql://express-boilerplate:express-boilerplate@localhost:3306/express-boilerplate

# JWT
JWT_SECRET=your-jwt-secret-min-32-chars
REFRESH_TOKEN_SECRET=your-refresh-token-secret-min-32-chars
JWT_EXPIRY=3d
REFRESH_TOKEN_EXPIRY=7d

# Frontend
FRONTEND_URL=http://localhost:3000

# Prometheus
PROMETHEUS_URL=http://localhost:9090

# Email (Optional in development)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=no-reply@example.com

# App
APP_NAME=BASMA Maintenance Platform

# File Storage Configuration (Hetzner Object Storage)
HETZNER_ENDPOINT_URL=https://nbg1.your-objectstorage.com
HETZNER_ACCESS_KEY_ID=your-hetzner-access-key-id
HETZNER_SECRET_ACCESS_KEY=your-hetzner-secret-access-key
HETZNER_BUCKET_NAME=basma-maintenance-files
HETZNER_REGION=nbg1

# File Processing Configuration
MAX_FILE_SIZE=52428800  # 50MB in bytes
MAX_FILES_PER_UPLOAD=10
ENABLE_VIRUS_SCANNING=false

# File Security Configuration
FILE_URL_SECRET=your-super-secret-file-url-signing-key
FILE_URL_EXPIRY=3600  # Default URL expiry in seconds (1 hour)

# CDN Configuration (Optional)
CDN_ENABLED=false
CDN_BASE_URL=https://cdn.basma-platform.com

# Redis Configuration (for caching and background jobs)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Feature Flags
FEATURE_FILE_MANAGEMENT=true
FEATURE_THUMBNAIL_GENERATION=true