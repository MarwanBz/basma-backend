	"item": [
		{
			"name": "Customer Confirmation",
			"item": [
				{
					"name": "Confirm Completion",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Success is true\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.success).to.be.true;",
									"});",
									"",
									"pm.test(\"Request status is closed\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.data.request.status).to.eql(\"closed\");",
									"});",
									"",
									"pm.test(\"Confirmation status is confirmed\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.data.request.customerConfirmationStatus).to.eql(\"confirmed\");",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{customer_token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"comment\": \"Work looks great! Thank you for the quick service.\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/requests/{{request_id}}/confirm-completion",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"requests",
								"{{request_id}}",
								"confirm-completion"
							]
						},
						"description": "Confirm that maintenance work has been completed to your satisfaction. This changes the request status from COMPLETED to CLOSED."
					},
					"response": []
				},
				{
					"name": "Reject Completion",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Success is true\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.success).to.be.true;",
									"});",
									"",
									"pm.test(\"Request status is customer_rejected\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.data.request.status).to.eql(\"customer_rejected\");",
									"});",
									"",
									"pm.test(\"Confirmation status is rejected\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.data.request.customerConfirmationStatus).to.eql(\"rejected\");",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{customer_token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"reason\": \"Work not completed properly\",\n  \"comment\": \"The door still doesn't close correctly. Please fix again.\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/requests/{{request_id}}/reject-completion",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"requests",
								"{{request_id}}",
								"reject-completion"
							]
						},
						"description": "Reject the completion and report issues with the work. This changes the request status from COMPLETED to CUSTOMER_REJECTED."
					},
					"response": []
				},
				{
					"name": "Get Confirmation Status",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Success is true\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.success).to.be.true;",
									"});",
									"",
									"pm.test(\"Has required fields\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.data).to.have.property('status');",
									"    pm.expect(jsonData.data).to.have.property('canConfirm');",
									"    pm.expect(jsonData.data).to.have.property('canReject');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{customer_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/requests/{{request_id}}/confirmation-status",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"requests",
								"{{request_id}}",
								"confirmation-status"
							]
						},
						"description": "Check the current confirmation status of a request and whether you can confirm or reject it."
					},
					"response": []
				},
				{
					"name": "Close Without Confirmation (Admin)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Success is true\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.success).to.be.true;",
									"});",
									"",
									"pm.test(\"Request status is closed\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.data.request.status).to.eql(\"closed\");",
									"});",
									"",
									"pm.test(\"Confirmation status is overridden\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.data.request.customerConfirmationStatus).to.eql(\"overridden\");",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{admin_token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"reason\": \"Customer confirmed verbally over phone and requested immediate closure. Email documentation sent for records.\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/requests/{{request_id}}/close-without-confirmation",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"requests",
								"{{request_id}}",
								"close-without-confirmation"
							]
						},
						"description": "Admin endpoint to close a request without customer confirmation. Requires admin permissions and a valid reason."
					},
					"response": []
				}
			],
			"description": "Endpoints for customer confirmation of completed maintenance work"
