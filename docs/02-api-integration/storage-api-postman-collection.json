			"name": "File Upload",
			"item": [
				{
					"name": "Upload Single File",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test(\"Success is true\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.success).to.be.true;",
									"});",
									"",
									"pm.test(\"Has required fields\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.data).to.have.property('key');",
									"    pm.expect(jsonData.data).to.have.property('url');",
									"    pm.expect(jsonData.data).to.have.property('signedUrl');",
									"    pm.expect(jsonData.data).to.have.property('fileName');",
									"    pm.expect(jsonData.data).to.have.property('fileSize');",
									"});",
									"",
									"// Store file key for later tests",
									"if (pm.response.json().success) {",
									"    pm.collectionVariables.set('file_key', pm.response.json().data.key);",
									"    pm.collectionVariables.set('file_name', pm.response.json().data.fileName);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "file",
									"type": "file",
									"src": [],
									"description": "Select a file to upload (max 50MB)"
								},
								{
									"key": "entityType",
									"value": "MAINTENANCE_REQUEST",
									"description": "Type of entity the file is associated with"
								},
								{
									"key": "entityId",
									"value": "{{request_id}}",
									"description": "ID of the entity"
								},
								{
									"key": "isPublic",
									"value": "false",
									"description": "Whether file should be publicly accessible"
								}
